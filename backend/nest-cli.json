{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [{
      "include": "uploads/*", 
      "outDir": "dist/", 
      "watchAssets": true 
    },
    {
      "include": "invoices/*", 
      "outDir": "dist/", 
      "watchAssets": true 
    }]
  }
}
